{
  "version": 2,
  "builds": [
    {
      "src": "website/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "website/**/*.{html,css,js,ico,png,jpg,jpeg,gif,svg}",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "website/server.js"
    },
    {
      "src": "/(.*\\.(?:html|css|js|ico|png|jpg|jpeg|gif|svg))$",
      "dest": "website/$1"
    },
    {
      "src": "/(.*)",
      "dest": "website/server.js"
    }
  ]
}
